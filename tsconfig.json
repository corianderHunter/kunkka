{
  "compilerOptions": {
    // "allowJs": true,
    // "allowSyntheticDefaultImports": true,
    // "esModuleInterop": true,
    // "isolatedModules": true,
    // "jsx": "react",
    // "lib": ["es6"],
    // "moduleResolution": "node",
    // "noEmit": true,
    // "strict": false,
    // "target": "esnext",
    // "strictNullChecks": false
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "lib": ["es2015", "es2017", "dom"],
    "sourceMap": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "target": "es5",
    "module": "esnext",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "newLine": "LF",
    "noUnusedLocals": false, // 未引用变量报错
    "baseUrl": "."
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
